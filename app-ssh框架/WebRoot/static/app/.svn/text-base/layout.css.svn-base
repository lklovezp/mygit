.main{ position:relative; overflow:hidden; background:#ffffff;}
.main.padding{padding-left:230px;}
.main .l_part{width:230px; position:absolute; left:0; top:0; overflow:auto; background:#f6f6f6;user-select:none;-webkit-user-select:none;}

.main .content{ background-image:url(images/home/content_bg.png); background-repeat:repeat-y; margin-left:230px;}
.main .l_part a{ text-decoration:none; display:block; font-size:16px; height:40px; line-height:40px;
     padding-left:45px; padding-right:30px; margin-left:6px; overflow:hidden;}
.main .l_part p{ height:40px; background:#cff1ff;border-bottom:1px solid #b8d0da; cursor:pointer;}
.main .l_part p a{ color:#0c4079;cursor:pointer;}
.main .l_part p.cur{ background:#006ef6;}
.main .l_part p.cur a{ background:#3393ff; color:#ffffff;}
.main .l_part p:hover{ font-weight:bold;}



