body{ margin:0px; padding:0px; font-size:12px; font-family:"Microsoft YaHei"; color:#484848;}
*{ margin:0px; padding:0px;}
img{ border:0px;}
ul,li{ list-style:none; margin:0; padding:0;}
h1,h2,h3,h4,h5,h6{ margin:0; padding:0; font-size:12px; font-weight:normal;}
.cc{ background: none; border: 0; clear: both; display: block; float: none; font-size: 0; margin: 0; padding: 0; overflow: hidden; visibility: hidden; width: 0; height: 0;}
.sblock10{ height:10px; line-height:10px; font-size:10px; overflow:hidden; margin:0px auto; clear:both;}
.sblock15{ height:15px; line-height:15px; font-size:15px; overflow:hidden; margin:0px auto; clear:both;}
.sblock20{ height:20px; line-height:20px; font-size:20px; overflow:hidden; margin:0px auto; clear:both;}
.sblock25{ height:25px; line-height:25px; font-size:25px; overflow:hidden; margin:0px auto; clear:both;}
a{ color:#333333; text-decoration:none;}
a:hover{ color:#333333; text-decoration:underline;}
.clearfix{*zoom:1;}
.clearfix:before{ content:""; height:0; line-height:0; display:table;}
.clearfix:after{ content:""; height:0; line-height:0; display:table; clear:both;}


.top{ min-width:700px;_width:700px; position:relative; height:100px; background:url(images/home/top_bg.jpg) no-repeat;}
.top .menu{ width:536px; position:absolute; right:76px; top:15px; font-size:14px;}
.top .menu .m1{ height:36px; line-height:36px; color:#ffffff; text-align:right;}
.top .menu .m1 a{ display:inline-block;padding-left:26px; color:#ffffff;}
.top .menu .m1 a.help{ margin-right:18px; background:url(images/home/top_help.png) 0px 10px no-repeat;}
.top .menu .m1 a.logOff{ margin-left:18px; background:url(images/home/top_logOff.png) 0px 10px no-repeat;}
.top .menu .m2{ height:26px; text-align:right;}
.top .menu .m2 span{ display:inline-block; height:26px;line-height:26px; float:right;}
.top .menu .m2 .leftB{ width:12px; background:url(images/home/top_user_left.png) no-repeat;}
.top .menu .m2 .rightB{ width:12px; background:url(images/home/top_user_right.png) no-repeat;}
.top .menu .m2 .txt{ padding:0px 14px;  background:#04339e; color:#b7d9fe;}

